<UserControl
    x:Class="DentalClinic.WpfMD.Views.PatientsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DentalClinic.WpfMD.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DentalClinic.WpfMD.ViewModels"
    xmlns:vt="clr-namespace:DentalClinic.WpfMD.Models"
    d:DataContext="{d:DesignInstance Type=vm:PatientsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Text="PATIENTS VIEW" />
            <Button
                Command="{Binding ShowMeTheSchedule}"
                CommandParameter="{x:Static vt:ViewType.ScheduleViewModel}"
                Content="Pokaż skedżul" />
            <DataGrid ItemsSource="{Binding Patients}" />
        </StackPanel>

    </Grid>
</UserControl>
