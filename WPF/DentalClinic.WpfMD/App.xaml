<Application
    x:Class="DentalClinic.WpfMD.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:views="clr-namespace:DentalClinic.WpfMD.Views"
    xmlns:vm="clr-namespace:DentalClinic.WpfMD.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <md:CustomColorTheme
                    BaseTheme="Dark"
                    PrimaryColor="Aqua"
                    SecondaryColor="DarkGreen" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type vm:PatientsViewModel}">
                        <views:PatientsView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ScheduleViewModel}">
                        <views:ScheduleView />
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
